<%= form_for @mini_quora do |f| %>
  
  <% if @mini_quora.errors.any? %>
    <div id="error_explanation">
      <h3>保存不成功！这个表单存在 <%= @mini_quora.errors.count %>个 错误！</h3>
      <ul>
      <% @mini_quora.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br><br><br>
  <div class="field">
    <%= f.text_area :question %>
  </div>

  <%= f.submit "写好了", class: "btn btn-primary" %>
<% end %>